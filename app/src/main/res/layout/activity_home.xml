<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_common"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="普通列表用法"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_multi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="多布局用法"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_common" />

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="分组布局"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_multi" />


    <TextView
        android:id="@+id/tv_drag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="item拖拽"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_group" />

</android.support.constraint.ConstraintLayout>